@model IEnumerable<_23dh114467_NamStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH DANH MỤC</h2>


<table class="table bg-info col-md-6">
    <tr>
        <th class="bg-success col-md-4">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            TÊN DANH MỤC
        </th>
        <th class="bg-success col-md-2"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="btn-sm">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
                <table class="table">
                    <tr>
                        <th>TEN MAT HANG</th>
                        <th>MO TA</th>
                    </tr>

                    @foreach (var pro in item.Products)
                    {  
                        
                        <tr class="btn-sm">
                            <td>
                                @Html.DisplayFor(modelItem => pro.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pro.ProductDescription)
                            </td>
                        </tr>
                     }
                    </table>
               
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
                @*@Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })*@
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
