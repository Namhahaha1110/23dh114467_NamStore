@model _23dh114467_NamStore.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">XÓA DANH MỤC</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <h4>Bạn chắc chắn muốn xóa danh mục này không?</h4>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <div class="control-label col-md-2">TÊN DANH MỤC</div>
            <div class="col-md-10">
                @*HIỂN THỊ GIÁ TRỊ CỦA CATEGORIES NAME*@
                @Html.DisplayFor(model => model.CategoryName)
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xóa" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>

}
